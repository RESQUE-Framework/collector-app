{
    "version": "0.3.0",
    "date": "2025-02-13",
    "prefix": "M",
    "title": "Author / Metadata",
    "elements": [
        {
            "id": "LastName",
            "type": "text",
            "title": "Last name of applicant"
        },
        {
            "id": "FirstName",
            "type": "text",
            "title": "First name"
        },
        {
            "id": "Gender",
            "type": "radio",
            "title": "Your gender:",
            "options": [
                {
                    "id": "Female",
                    "text": "Female"
                },
                {
                    "id": "Male",
                    "text": "Male"
                },
                {
                    "id": "Diverse",
                    "text": "Diverse"
                },
                {
                    "id": "NoReply",
                    "text": "Prefer not to answer"
                }
            ]
        },
        
        {
            "id": "YearPhD",
            "type": "number",
            "title": "Year of PhD / Dr."
        },

        {
            "id": "YearHabil",
            "type": "number",
            "title": "(if available) Year of habilitation or positive mid-term evaluation of W1/assistant professorship (Juniorprofessur)"
        },

        {
            "id": "NumberChildren",
            "type": "number",
            "title": "Number of children",
            "default": 0
        },
        {
            "id": "AcademicAgeBonus",
            "type": "number",
            "title": "Years that are subtracted from active academic life (e.g., due to parental leave, care for family members, long-term illness). Please enter only the number; you can enter fractional years, e.g. 0.5."
        },
        {
            "id": "AcademicAgeBonus_Explanation",
            "type": "text",
            "title": "Please describe the circumstances that led to this reduction."
        },
        {
            "id": "ORCID",
            "type": "text",
            "title": "ORCID identifier (as full link, e.g. https://orcid.org/0000-0002-1825-0097)"
        },
        {
            "id": "HonestyDisclaimer",
            "type": "checkbox",
            "title": "I am aware that all information can be verified. I provide accurate information to the best of my knowledge.",
            "options": [
                {
                    "id": "Yes",
                    "text": "Yes"
                }
            ]
        },

        {
            "id": "METASEP1",
            "type": "separator"
        },
        {
            "id": "DateCreated",
            "type": "info",
            "title": "Date created",
            "text": "$date_created@datetime"
        },
        {
            "id": "LastChange",
            "type": "info",
            "title": "Last change",
            "text": "$date_modified@datetime"
        }
    ]
}